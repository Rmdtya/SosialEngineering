<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#80919191"
    android:layout_gravity="center"
    tools:context=".Feedback">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_marginStart="25dp"
        android:layout_marginEnd="25dp"
        android:background="@drawable/menubg1"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:paddingTop="40dp"
        android:paddingBottom="40dp"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Berikan Feedback"
            android:fontFamily="@font/jost_medium"
            android:textSize="19dp"
            android:textStyle="bold"
            android:gravity="center"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:layout_marginBottom="20dp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Masukan Feedback"
            android:fontFamily="@font/jost_medium"
            android:textSize="13dp"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:layout_marginBottom="5dp"/>

        <EditText
            android:id="@+id/inp"
            android:layout_width="match_parent"
            android:layout_height="140dp"
            android:layout_weight="0.6"
            android:background="@drawable/edit_text1"
            android:ems="10"
            android:maxLines="10"
            android:fontFamily="@font/jost_medium"
            android:inputType="textMultiLine"
            android:padding="10dp"
            android:paddingLeft="12dp"
            android:gravity="start"
            android:scrollHorizontally="false"
            android:hint="Input Feedback"
            android:textAlignment="textStart"
            tools:ignore="RtlCompat"
            android:layout_marginBottom="15dp"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:textSize="12sp"/>


        <Button
            android:id="@+id/btn_confirm"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="@drawable/menubg4"
            android:fontFamily="@font/jost_medium"
            android:gravity="center"
            android:backgroundTint="@color/black"
            android:text="Konfirmasi"
            android:textColorHighlight="#952222"
            android:textColorLink="#000000"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:textAllCaps="false"
            android:textSize="13sp"
            android:layout_marginTop="20dp"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"/>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>